  padding: 0;
  box-sizing: border-box;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--font-family-primary);
    background: var(--color-bg-primary);
    color: var(--color-text-primary);
    line-height: 1.6;
    min-height: 100vh;
    overflow-x: hidden;
    font-weight: 400;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  /* Premium Animated Background */
  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background:
      radial-gradient(circle at 20% 30%, rgba(212, 175, 55, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(192, 192, 192, 0.06) 0%, transparent 50%),
      radial-gradient(circle at 50% 50%, rgba(255, 215, 0, 0.04) 0%, transparent 60%);
    z-index: -1;
    animation: backgroundShift 25s ease-in-out infinite;
  }

  @keyframes backgroundShift {

    0%,
    100% {
      opacity: 1;
    }

    50% {
      opacity: 0.6;
    }
  }

  /* Professional Scrollbar */
  ::-webkit-scrollbar {
    width: 12px;
  }

  ::-webkit-scrollbar-track {
    background: var(--color-bg-secondary);
  }

  ::-webkit-scrollbar-thumb {
    background: var(--gradient-primary);
    border-radius: var(--radius-full);
    border: 2px solid var(--color-bg-secondary);
  }

  ::-webkit-scrollbar-thumb:hover {
    background: var(--color-accent-gold);
  }

  /* ==================== TYPOGRAPHY ==================== */
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: var(--font-family-display);
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: var(--spacing-md);
    letter-spacing: -0.02em;
  }

  h1 {
    font-size: var(--font-size-5xl);
  }

  h2 {
    font-size: var(--font-size-4xl);
  }

  h3 {
    font-size: var(--font-size-3xl);
  }

  h4 {
    font-size: var(--font-size-2xl);
  }

  /* ==================== LAYOUT ==================== */
  .container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 var(--spacing-2xl);
  }

  .section {
    padding: var(--spacing-3xl) 0;
  }

  /* ==================== HEADER ==================== */
  .header {
    background: rgba(0, 0, 0, 0.95);
    backdrop-filter: blur(30px);
    border-bottom: var(--border-primary);
    padding: var(--spacing-xl) 0;
    position: sticky;
    top: 0;
    z-index: 1000;
    animation: slideDown 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  @keyframes slideDown {
    from {
      transform: translateY(-100%);
      opacity: 0;
    }

    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-size: var(--font-size-3xl);
    font-weight: 800;
    font-family: var(--font-family-display);
    background: var(--gradient-gold);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    letter-spacing: -0.03em;
    position: relative;
  }

  .logo::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--gradient-primary);
    transform: scaleX(0);
    transition: transform var(--transition-base);
  }

  .logo:hover::after {
    transform: scaleX(1);
  }

  .logo-icon {
    font-size: var(--font-size-4xl);
    filter: drop-shadow(0 0 10px rgba(212, 175, 55, 0.5));
  }

  /* ==================== SEARCH SECTION ==================== */
  .search-section {
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: var(--border-primary);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-3xl);
    margin-bottom: var(--spacing-3xl);
    box-shadow: var(--shadow-2xl), var(--shadow-gold);
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
  }

  .search-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: var(--gradient-shine);
    animation: shine 3s infinite;
  }

  @keyframes shine {
    0% {
      left: -100%;
    }

    50%,
    100% {
      left: 100%;
    }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(40px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .search-title {
    text-align: center;
    margin-bottom: var(--spacing-xl);
    background: var(--gradient-gold);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: var(--font-size-4xl);
    letter-spacing: -0.03em;
  }

  .search-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .search-input-wrapper {
    position: relative;
  }

  .search-input {
    width: 100%;
    padding: var(--spacing-lg) var(--spacing-xl);
    background: rgba(255, 255, 255, 0.03);
    border: 2px solid rgba(212, 175, 55, 0.2);
    border-radius: var(--radius-xl);
    color: var(--color-text-primary);
    font-size: var(--font-size-lg);
    font-family: var(--font-family-primary);
    transition: all var(--transition-base);
    resize: vertical;
    min-height: 120px;
  }

  .search-input:focus {
    outline: none;
    border-color: var(--color-accent-gold);
    background: rgba(255, 255, 255, 0.05);
    box-shadow: var(--shadow-gold);
  }

  .search-input::placeholder {
    color: var(--color-text-muted);
  }

  /* Buttons */
  .btn {
    padding: var(--spacing-lg) var(--spacing-2xl);
    border: none;
    border-radius: var(--radius-xl);
    font-size: var(--font-size-base);
    font-weight: 600;
    font-family: var(--font-family-primary);
    cursor: pointer;
    transition: all var(--transition-base);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-sm);
    position: relative;
    overflow: hidden;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .btn:hover::before {
    width: 400px;
    height: 400px;
  }

  .btn-primary {
    background: var(--gradient-gold);
    color: #000000;
    box-shadow: var(--shadow-lg), var(--shadow-gold);
    font-weight: 700;
  }

  .btn-primary:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-2xl), var(--shadow-gold);
  }

  .btn-primary:active {
    transform: translateY(-1px);
  }

  .btn-secondary {
    background: rgba(255, 255, 255, 0.05);
    color: var(--color-text-primary);
    border: var(--border-secondary);
  }

  .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--color-accent-gold);
  }

  /* ==================== RESULTS SECTION ==================== */
  .results-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-2xl);
    flex-wrap: wrap;
    gap: var(--spacing-lg);
    padding-bottom: var(--spacing-lg);
    border-bottom: var(--border-subtle);
  }

  .results-title {
    background: var(--gradient-gold);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: var(--font-size-3xl);
  }

  .sort-controls {
    display: flex;
    gap: var(--spacing-md);
    align-items: center;
  }

  .sort-label {
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .filter-select {
    padding: var(--spacing-sm) var(--spacing-lg);
    background: var(--color-bg-elevated);
    border: var(--border-secondary);
    border-radius: var(--radius-md);
    color: var(--color-text-primary);
    font-family: var(--font-family-primary);
    transition: all var(--transition-base);
    cursor: pointer;
  }

  .filter-select:focus {
    outline: none;
    border-color: var(--color-accent-gold);
    box-shadow: var(--shadow-gold);
  }

  /* Car Grid */
  .car-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(380px, 1fr));
    gap: var(--spacing-2xl);
    margin-bottom: var(--spacing-3xl);
  }

  /* Car Card - Premium Design */
  .car-card {
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: var(--border-primary);
    border-radius: var(--radius-2xl);
    padding: 0;
    transition: all var(--transition-slow);
    position: relative;
    overflow: hidden;
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1) backwards;
  }

  .car-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 4px;
    background: var(--gradient-gold);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform var(--transition-base);
  }

  .car-card:hover::before {
    transform: scaleX(1);
  }

  .car-card:hover {
    background: var(--color-bg-card-hover);
    border-color: var(--color-accent-gold);
    transform: translateY(-8px);
    box-shadow: var(--shadow-2xl), var(--shadow-gold);
  }

  align-items: start;
  padding: var(--spacing-lg);
  padding-bottom: var(--spacing-md);
  }

  .car-rank {
    background: var(--gradient-gold);
    color: #000000;
    width: 48px;
    height: 48px;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 800;
    font-size: var(--font-size-xl);
    box-shadow: var(--shadow-md);
    font-family: var(--font-family-display);
  }

  .car-name {
    font-size: var(--font-size-2xl);
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xs);
    font-family: var(--font-family-display);
  }

  .car-brand {
    color: var(--color-accent-gold);
    font-size: var(--font-size-sm);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  .car-score {
    background: var(--gradient-gold);
    color: #000000;
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: var(--radius-full);
    font-weight: 800;
    font-size: var(--font-size-sm);
    display: inline-block;
    margin: 0 var(--spacing-lg) var(--spacing-md);
    box-shadow: var(--shadow-md);
  }

  .car-details {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-md);
    padding: 0 var(--spacing-lg);
    margin-bottom: var(--spacing-md);
  }

  .car-detail {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .car-detail-label {
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .car-detail-value {
    font-size: var(--font-size-lg);
    color: var(--color-text-primary);
    font-weight: 700;
  }

  .car-specs-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-md);
    padding: var(--spacing-lg);
    margin-top: var(--spacing-md);
    border-top: var(--border-subtle);
    background: rgba(255, 255, 255, 0.02);
  }

  .car-spec-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xs);
    text-align: center;
  }

  .car-spec-icon {
    font-size: var(--font-size-2xl);
    margin-bottom: var(--spacing-xs);
  }

  .car-spec-label {
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .car-spec-value {
    font-size: var(--font-size-base);
    color: var(--color-text-primary);
    font-weight: 700;
  }

  .car-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    padding: 0 var(--spacing-lg) var(--spacing-lg);
  }

  .car-tag {
    padding: var(--spacing-xs) var(--spacing-md);
    background: rgba(212, 175, 55, 0.1);
    border: 1px solid rgba(212, 175, 55, 0.3);
    border-radius: var(--radius-sm);
    font-size: var(--font-size-xs);
    color: var(--color-accent-gold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Badges */
  .badge {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding: var(--spacing-xs) var(--spacing-md);
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-right: var(--spacing-xs);
  }

  .badge-ev {
    background: rgba(0, 255, 136, 0.15);
    color: var(--color-accent-success);
    border: 1px solid var(--color-accent-success);
  }

  .badge-premium {
    background: rgba(212, 175, 55, 0.15);
    color: var(--color-accent-gold);
    border: 1px solid var(--color-accent-gold);
  }

  .badge-budget {
    background: rgba(255, 170, 0, 0.15);
    color: var(--color-accent-warning);
    border: 1px solid var(--color-accent-warning);
  }

  /* View Toggle */
  .view-toggle {
    display: flex;
    gap: 0;
    background: var(--color-bg-elevated);
    padding: var(--spacing-xs);
    border-radius: var(--radius-xl);
    border: var(--border-secondary);
  }

  .view-toggle-btn {
    padding: var(--spacing-sm) var(--spacing-lg);
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition-base);
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .view-toggle-btn:hover {
    color: var(--color-text-primary);
    background: rgba(212, 175, 55, 0.1);
  }

  .view-toggle-btn.active {
    background: var(--gradient-gold);
    color: #000000;
    box-shadow: var(--shadow-md);
    font-weight: 700;
  }

  /* Table View */
  .table-container {
    overflow-x: auto;
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: var(--border-primary);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-xl);
    margin-bottom: var(--spacing-3xl);
    box-shadow: var(--shadow-xl);
  }

  .car-table {
    width: 100%;
    border-collapse: collapse;
    font-size: var(--font-size-sm);
  }

  .car-table thead {
    background: rgba(212, 175, 55, 0.1);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .car-table th {
    padding: var(--spacing-lg);
    text-align: left;
    font-weight: 700;
    color: var(--color-accent-gold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: var(--font-size-xs);
    border-bottom: 2px solid rgba(212, 175, 55, 0.3);
    white-space: nowrap;
  }

  .car-table td {
    padding: var(--spacing-lg);
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    color: var(--color-text-secondary);
  }

  .car-table tbody tr {
    transition: all var(--transition-base);
  }

  .car-table tbody tr:hover {
    background: rgba(212, 175, 55, 0.05);
  }

  .car-table .rank-cell {
    font-weight: 800;
    color: var(--color-accent-gold);
    font-size: var(--font-size-lg);
    font-family: var(--font-family-display);
  }

  .car-table .name-cell {
    font-weight: 700;
    color: var(--color-text-primary);
    min-width: 200px;
  }

  .car-table .brand-cell {
    color: var(--color-accent-platinum);
    font-weight: 600;
    text-transform: uppercase;
    font-size: var(--font-size-xs);
    letter-spacing: 0.1em;
  }

  .car-table .score-cell {
    font-weight: 700;
    color: var(--color-accent-success);
  }

  .car-table .price-cell {
    font-weight: 700;
    color: var(--color-accent-gold);
  }

  .car-table .compare-checkbox {
    width: 20px;
    height: 20px;
    cursor: pointer;
    accent-color: var(--color-accent-gold);
  }

  /* Comparison Panel */
  .comparison-panel {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.98);
    backdrop-filter: blur(30px);
    border-top: 2px solid var(--color-accent-gold);
    padding: var(--spacing-xl);
    transform: translateY(100%);
    transition: transform var(--transition-base);
    z-index: 2000;
    box-shadow: 0 -20px 60px rgba(0, 0, 0, 0.8), var(--shadow-gold);
  }

  .comparison-panel.active {
    transform: translateY(0);
  }

  .comparison-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--spacing-lg);
  }

  .comparison-title {
    font-size: var(--font-size-2xl);
    background: var(--gradient-gold);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-family: var(--font-family-display);
  }

  .comparison-close {
    background: rgba(255, 51, 102, 0.2);
    border: 1px solid var(--color-accent-danger);
    color: var(--color-accent-danger);
    padding: var(--spacing-sm) var(--spacing-lg);
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--transition-base);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .comparison-close:hover {
    background: var(--color-accent-danger);
    color: #000000;
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--spacing-lg);
    max-height: 400px;
    overflow-y: auto;
  }

  .comparison-card {
    background: var(--color-bg-elevated);
    border: var(--border-primary);
    border-radius: var(--radius-xl);
    padding: var(--spacing-lg);
    position: relative;
  }

  .comparison-remove {
    position: absolute;
    top: var(--spacing-sm);
    right: var(--spacing-sm);
    background: rgba(255, 51, 102, 0.2);
    border: none;
    color: var(--color-accent-danger);
    width: 28px;
    height: 28px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--font-size-lg);
    transition: all var(--transition-base);
    font-weight: 700;
  }

  .comparison-remove:hover {
    background: var(--color-accent-danger);
    color: #000000;
  }

  .comparison-car-name {
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-md);
    padding-right: var(--spacing-2xl);
    font-size: var(--font-size-lg);
  }

  .comparison-car-details {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
    font-size: var(--font-size-sm);
  }

  .comparison-detail-row {
    display: flex;
    justify-content: space-between;
    padding: var(--spacing-xs) 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .comparison-detail-label {
    color: var(--color-text-tertiary);
    text-transform: uppercase;
    font-size: var(--font-size-xs);
    letter-spacing: 0.05em;
  }

  .comparison-detail-value {
    color: var(--color-text-primary);
    font-weight: 700;
  }

  /* Charts Section */
  .charts-section {
    margin-top: var(--spacing-4xl);
  }

  .charts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(450px, 1fr));
    gap: var(--spacing-2xl);
  }

  .chart-container {
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: var(--border-primary);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-2xl);
    box-shadow: var(--shadow-xl);
  }

  .chart-title {
    color: var(--color-accent-gold);
    margin-bottom: var(--spacing-xl);
    font-family: var(--font-family-display);
    font-size: var(--font-size-2xl);
  }

  /* Articles Section */
  .articles-section {
    margin-top: var(--spacing-3xl);
  }

  .articles-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-xl);
  }

  .article-card {
    background: var(--color-bg-card);
    backdrop-filter: blur(20px);
    border: var(--border-primary);
    border-radius: var(--radius-2xl);
    overflow: hidden;
    transition: all var(--transition-base);
    cursor: pointer;
  }

  .article-card:hover {
    transform: translateY(-5px);
    border-color: var(--color-accent-gold);
    box-shadow: var(--shadow-2xl), var(--shadow-gold);
  }

  .article-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    background: linear-gradient(135deg, rgba(212, 175, 55, 0.2), rgba(192, 192, 192, 0.2));
  }

  .article-content {
    padding: var(--spacing-xl);
  }

  .article-title {
    font-size: var(--font-size-lg);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-sm);
    line-height: 1.4;
  }

  .article-description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--spacing-md);
  }

  .article-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--font-size-xs);
    color: var(--color-text-tertiary);
  }

  .article-source {
    font-weight: 700;
    color: var(--color-accent-gold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .article-date {
    color: var(--color-text-muted);
  }

  /* Loading & States */
  .loading {
    text-align: center;
    padding: var(--spacing-4xl);
  }

  .spinner {
    width: 60px;
    height: 60px;
    border: 4px solid rgba(212, 175, 55, 0.2);
    border-top-color: var(--color-accent-gold);
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto var(--spacing-lg);
  }

  @keyframes spin {
    to {
      transform: rotate(360deg);
    }
  }

  .error {
    background: rgba(255, 51, 102, 0.1);
    border: 1px solid var(--color-accent-danger);
    border-radius: var(--radius-2xl);
    padding: var(--spacing-2xl);
    color: var(--color-accent-danger);
    text-align: center;
  }

  .empty-state {
    text-align: center;
    padding: var(--spacing-4xl);
    color: var(--color-text-tertiary);
  }

  .empty-state-icon {
    font-size: 6rem;
    margin-bottom: var(--spacing-lg);
    opacity: 0.3;
  }

  /* Utilities */
  .hidden {
    display: none !important;
  }

  .text-center {
    text-align: center;
  }

  .mt-1 {
    margin-top: var(--spacing-md);
  }

  .mt-2 {
    margin-top: var(--spacing-lg);
  }

  .mt-3 {
    margin-top: var(--spacing-xl);
  }

  .mb-1 {
    margin-bottom: var(--spacing-md);
  }

  .mb-2 {
    margin-bottom: var(--spacing-lg);
  }

  .mb-3 {
    margin-bottom: var(--spacing-xl);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .container {
      padding: 0 var(--spacing-lg);
    }

    h1 {
      font-size: var(--font-size-4xl);
    }

    h2 {
      font-size: var(--font-size-3xl);
    }
  }

  @media (max-width: 768px) {
    .header-content {
      flex-direction: column;
      gap: var(--spacing-md);
    }

    .car-grid {
      grid-template-columns: 1fr;
    }

    .charts-grid {
      grid-template-columns: 1fr;
    }

    .articles-grid {
      grid-template-columns: 1fr;
    }

    .results-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .view-toggle {
      width: 100%;
    }

    .car-specs-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .table-container {
      overflow-x: scroll;
    }

    .car-table {
      min-width: 900px;
    }

    .comparison-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Animations */
  @keyframes pulse {

    0%,
    100% {
      opacity: 1;
    }

    50% {
      opacity: 0.5;
    }
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }

  /* Stagger animation for car cards */
  .car-card:nth-child(1) {
    animation-delay: 0.1s;
  }

  .car-card:nth-child(2) {
    animation-delay: 0.2s;
  }

  .car-card:nth-child(3) {
    animation-delay: 0.3s;
  }

  .car-card:nth-child(4) {
    animation-delay: 0.4s;
  }

  .car-card:nth-child(5) {
    animation-delay: 0.5s;
  }

  .car-card:nth-child(6) {
    animation-delay: 0.6s;
  }